    "postcss": "^8.5.6",
    "autoprefixer": "^10.4.21",
    "@types/node": "^22.8.5",
    "@types/react": "^18.3.7",
    "@types/react-dom": "^18.3.0"
  },
  "packageManager": "pnpm@9.12.3",
  "engines": { "node": ">=18" }
