{
  "extends": "@repo/typescript-config/next.json",
  "compilerOptions": {
    "paths": {
      "@repo/ui": [
        "../../packages/ui/src"
      ],
      "@repo/streak-engine": [
        "../../packages/streak-engine/src"
      ],
      "@repo/storage": [
        "../../packages/storage/src"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
